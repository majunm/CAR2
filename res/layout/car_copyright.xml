<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/copyRight"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@id/one_teams"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/facture_teams" >

        <TextView
            android:id="@id/one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/one_title"
            android:text="@string/makeTeam"
            android:textColor="@color/one_textcolor"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@id/return_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@id/car_copyright_return"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:contentDescription="@null"
                android:padding="15dp"
                android:src="@drawable/return_button" />
        </RelativeLayout>
    </RelativeLayout>

    <!--
         <ImageView
        android:id="@id/loader_welcome_ad01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:contentDescription="@null"
        android:src="@drawable/loader_icon" />
    -->

    <ImageView
        android:id="@id/car_copyright_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/loader_icon" />

    <TextView
        android:id="@id/car_copyright_details"
        android:layout_width="fill_parent"
        android:layout_margin="20dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/one_teams" />

</RelativeLayout>