<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/car_detail_layout"
    android:background="#F4F5F7"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/car_main_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/car_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="#A3A3A4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#C3C4C6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.0"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/car_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:contentDescription="@string/car_logo"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:src="@drawable/a0" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/car_english_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="#A3A3A4" />

                <TextView
                    android:id="@+id/car_china_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="#A3A3A4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/car_detail_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/car_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/car_detail_info"
                        android:background="@drawable/car_name_bg"
                        android:gravity="left"
                        android:lineSpacingExtra="1dp"
                        android:lineSpacingMultiplier="1.0"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textScaleX="1.2"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/car_story_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/car_hint_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="@string/app_name"
                android:textColor="#A3A3A4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#C3C4C6" />

            <TextView
                android:id="@+id/car_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="1dp"
                android:lineSpacingMultiplier="1.0"
                android:padding="8dp"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textScaleX="1.5"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>